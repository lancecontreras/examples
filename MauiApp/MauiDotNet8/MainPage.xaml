<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDotNet8.MainPage">

  <ScrollView>
    <VerticalStackLayout
            Padding="30,20"      
            Spacing="25">
      <Label Text="{Binding Title}" Margin="0,16"/>
      <Entry Text="{Binding Message, UpdateSourceEventName=PropertyChanged, Mode=TwoWay}" Margin="0,8"/>
      <Button Text="Show Message" Command="{Binding ShowMessageCommand}" />
    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
